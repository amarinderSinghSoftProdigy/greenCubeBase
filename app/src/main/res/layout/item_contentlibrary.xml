<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_itemmovie"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size140"
            android:layout_marginRight="@dimen/size5"
            android:background="@drawable/bg_item_movie"/>

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size4"
            android:paddingRight="@dimen/size4"
            android:paddingTop="@dimen/size1"
            android:paddingBottom="@dimen/size1"
            android:background="@color/gold"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/size10"
            android:textColor="#ffffff"
            android:text="VIP"
            android:textSize="@dimen/size9"
            android:visibility="gone"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size52"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_namemov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#222222"
            android:textSize="@dimen/size14" />

        <TextView
            android:id="@+id/time_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="2,4m downloads"
            android:textColor="#3399FF"
            android:textSize="@dimen/size11" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:background="?attr/view_bg"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_keyboard_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_keyboard_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size4"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="2"/>
        <TextView
            android:id="@+id/tv_keyboard_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size4"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size4"
        android:layout_marginRight="@dimen/size10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_keyboard_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="4"/>
        <TextView
            android:id="@+id/tv_keyboard_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size4"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="5"/>
        <TextView
            android:id="@+id/tv_keyboard_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size4"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size4"
        android:layout_marginRight="@dimen/size10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_keyboard_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="7"/>
        <TextView
            android:id="@+id/tv_keyboard_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size4"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="8"/>
        <TextView
            android:id="@+id/tv_keyboard_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size4"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size4"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_keyboard_clear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="@string/clear"/>
        <TextView
            android:id="@+id/tv_keyboard_0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size4"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="0"/>
        <TextView
            android:id="@+id/tv_keyboard_enter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size4"
            android:background="?attr/keyboard_num_bg"
            android:minHeight="@dimen/size45"
            android:layout_height="wrap_content"
            android:textColor="?attr/keyboard_textcolor"
            android:gravity="center"
            android:textSize="@dimen/size22"
            android:text="@string/enter"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size46"
        android:background="#ffffff">

        <FrameLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/size20"
            android:paddingRight="@dimen/size20"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_black"
                android:scaleType="fitXY" />
        </FrameLayout>


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Client Profile"
            android:textColor="#222222"
            android:textSize="@dimen/size17" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_mainaccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size10"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frm_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size62"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tv_numphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size16"
                android:text="@string/profile"
                android:textColor="#222222"
                android:textSize="@dimen/size14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size40"
                android:background="@drawable/ic_account" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/size14"
                android:background="@drawable/more_grey" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"/>

        <FrameLayout
            android:id="@+id/frm_mobinum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size44"
            android:background="#ffffff"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size18"
                android:text="@string/mobilenumber"
                android:textColor="#222222"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/tv_mobinum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size12"
                android:text="N/A"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/size12" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/frm_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size44"
            android:background="#ffffff"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size18"
                android:text="@string/email"
                android:textColor="#222222"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size12"
                android:text="N/A"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/size12" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/frm_sur"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size44"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size18"
                android:text="@string/surname"
                android:textColor="#222222"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/tv_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size40"
                android:text="N/A"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/size12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/size14"
                android:background="@drawable/more_grey" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1" />

        <FrameLayout
            android:id="@+id/frm_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size44"
            android:background="#ffffff"
            android:textColor="#222222">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size18"
                android:text="@string/name"
                android:textColor="#222222"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size40"
                android:text="N/A"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/size12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/size14"
                android:background="@drawable/more_grey" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1" />

        <FrameLayout
            android:id="@+id/frm_gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size44"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size18"
                android:text="@string/gender"
                android:textColor="#222222"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size40"
                android:text="N/A"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/size12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/size14"
                android:background="@drawable/more_grey" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1" />

        <FrameLayout
            android:id="@+id/frm_age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size44"
            android:background="#ffffff"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size18"
                android:text="@string/age"
                android:textColor="#222222"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size40"
                android:text="N/A"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/size12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/size14"
                android:background="@drawable/more_grey" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/frm_birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size44"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size18"
                android:text="@string/birthday"
                android:textColor="#222222"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/size40"
                android:text="N/A"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/size12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/size14"
                android:background="@drawable/more_grey" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
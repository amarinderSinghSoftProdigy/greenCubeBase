<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_itemmore"
        android:layout_width="@dimen/size100"
        android:layout_height="@dimen/size140"
        android:layout_marginRight="@dimen/size5"
        android:background="@drawable/bg_item_movie" />

    <TextView
        android:id="@+id/tv_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size4"
        android:paddingRight="@dimen/size4"
        android:paddingTop="@dimen/size1"
        android:paddingBottom="@dimen/size1"
        android:background="@color/gold"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/size9"
        android:textColor="#ffffff"
        android:text="VIP"
        android:textSize="@dimen/size9"
        android:visibility="gone"/>
</FrameLayout>
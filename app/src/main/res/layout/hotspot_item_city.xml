<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:background="#a6a6a6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size95"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_map"
            android:layout_width="@dimen/size146"
            android:layout_height="@dimen/size82"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size5"
            android:background="@drawable/map_preview"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="Quiptel Hong Kong Limited"
                android:textColor="#505155"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_streetNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="Rooms 903 – 908"
                android:textColor="#505155"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="Kai Tak Commercial Building"
                android:textColor="#505155"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="317 – 319 Des Vouex Road Central"
                android:textColor="#505155"
                android:textSize="@dimen/size12"
                android:textStyle="normal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size55"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="12230.4KM Away"
                    android:textColor="#505155"
                    android:textSize="@dimen/size13"
                    android:textStyle="normal" />

                <FrameLayout
                    android:layout_width="@dimen/size50"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/size10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hotspot"
                        android:layout_gravity="center_vertical"/>

                    <Button
                        android:id="@+id/btn_directions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:layout_marginLeft="@dimen/size10"
                        android:text="Map"
                        android:textAllCaps="false"
                        android:textColor="#505155"
                        android:fontFamily="sans-serif"
                        android:textSize="@dimen/size12" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
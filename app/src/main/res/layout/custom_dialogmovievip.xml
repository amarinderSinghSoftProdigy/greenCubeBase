<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size39"
        android:layout_marginRight="@dimen/size39"
        android:background="@drawable/bg_dialog_vip"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="@dimen/size45"
            android:layout_height="@dimen/size45"
            android:background="@drawable/close"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size20"
            android:text="Dear Customer:"
            android:textColor="#ffffff"
            android:textSize="@dimen/size15" />

        <TextView
            android:id="@+id/tv_switch_plan_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size20"
            android:paddingTop="@dimen/size5"
            android:text="Switch VIP plan and you can watch more movies free of charge."
            android:textColor="#ffffff"
            android:textSize="@dimen/size15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size10"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP PLAN(100 SCR/month)"
                android:paddingLeft="@dimen/size10"
                android:paddingEnd="@dimen/size10"
                android:textSize="@dimen/size15"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_vip"
                android:radius="21px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/size20"
            android:layout_marginEnd="@dimen/size15"
            android:layout_marginBottom="@dimen/size20">

            <TextView
                android:id="@+id/btn_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="R1.28/1 Day"
                android:textColor="#cd9e62"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size40"
            android:paddingTop="@dimen/size10"
            android:background="#696969"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP or Purchased? Please"
                android:textSize="@dimen/size15"
                android:paddingLeft="@dimen/size20"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="Sign In>"
                android:textSize="@dimen/size15"
                android:textColor="@color/green"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>